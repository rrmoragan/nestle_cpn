    var typing; //Variable para contabilizar el tiempo de escritura del usuario
    function changePostcode() {
        clearTimeout(typing);//Termino de escribir
        var zipcode = $('zip').getValue();
        if ((!Validation.get('IsEmpty').test(zipcode) && /(^\d{5}$)/.test(zipcode))) {
            $('finding-cp').setStyle({display: 'inline-block'});
            var zipcodeURL = '<?php echo $this->getUrl('completeaddress/index/findAddress/') ?>zipcode/' + zipcode;
            //console.log(zipcodeURL);
            new Ajax.Request(zipcodeURL, {
                method: 'get',
                onSuccess: function (transport) {
                    if (typeof transport.responseJSON !== 'undefined' && transport.responseJSON.status === true && transport.responseJSON.results > 0) {
                        var json = transport.responseJSON;
                        $('country').setValue('MX');
                        regionUpd.update();
                        $('region_id').setValue(json.data[0].region_id);
                        $('city').setValue(json.data[0].municipality);
                        $('neighborhood_id').select('option').invoke('remove');
                        for (i = 0; i < json.data.length; i++) {
                            var opt = document.createElement('option');
                            opt.text = json.data[i].neighborhood;
                            opt.value = json.data[i].neighborhood;
                            $('neighborhood_id').options.add(opt);
                        }
                        $('neighborhood_id').setStyle({display: 'block'});
                        $('neighborhood').setStyle({display: 'none'});
                        $('finding-cp').setStyle({display: 'none'});
                        selectedNeighborhoodId();
                    } else {
                        $('neighborhood_id').setStyle({display: 'none'});
                        $('neighborhood').setStyle({display: 'block'});
                        $('finding-cp').setStyle({display: 'none'});
                    }
                },
                onException: function () {
                    $('finding-cp').setStyle({display: 'none'});
                }
            });
        } else {
            $('neighborhood_id').setStyle({display: 'none'});
            $('neighborhood').setStyle({display: 'block'});
            $('neighborhood').setValue('');
        }
    }

    function checkEndTyping() {
        clearTimeout(typing);
        typing = setTimeout(changePostcode, 700);
    }

    function checkStartTyping() {
        clearTimeout(typing);
    }
    function selectedNeighborhoodId() {
        var neig = $('neighborhood_id').getValue();
        if (neig.length > 0) {
            $('neighborhood').setValue(neig);
        } else {
            $('neighborhood').setValue('');
        }
    }
    Event.observe('neighborhood_id', 'change', selectedNeighborhoodId);
    Event.observe('zip', 'change', changePostcode);
    Event.observe('zip', 'keyup', checkEndTyping);
    Event.observe('zip', 'keydown', checkStartTyping);
    document.observe("dom:loaded",changePostcode);

