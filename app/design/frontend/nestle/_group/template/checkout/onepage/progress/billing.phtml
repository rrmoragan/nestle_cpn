	/* si no tiene el rfc, trae el rfc de la direccion de facturacion */
	if( !isset( $this->getBilling()->_data['rfc'] ) ){
		$bd=$this->getCustomer()->getDefaultBilling();
		$rfc='';
		foreach ($this->getCustomer()->getAddresses() as $et => $r) {
			if( $r->getId()==$bd ){
				$rfc=$r->rfc;
			}
		}
		$this->getBilling()->_data['rfc']=strtoupper($rfc);
	}

