<?xml version="1.0"?>
<layout>
    <!-- checout pages -->
    <checkout_onepage_index>
        <reference name="checkout.onepage.billing">
            <action method="setTemplate">
                <template>entrepids/completeaddress/onepage/billing.phtml</template>
            </action>
        </reference>
        <reference name="checkout.onepage.shipping">
            <action method="setTemplate">
                <template>entrepids/completeaddress/onepage/shipping.phtml</template>
            </action>
        </reference>
    </checkout_onepage_index>
    <!-- /checkout pages -->
    <!-- cart page -->
    <checkout_cart_index translate="label">
        <reference name="checkout.cart.shipping">
            <action method="setTemplate">
                <template>entrepids/completeaddress/cart/shipping.phtml</template>
            </action>
        </reference>
    </checkout_cart_index>
    <!-- cart page -->
    <!-- customer account address -->
    <customer_address_form>
        <reference name="customer_address_edit">
            <action method="setTemplate">
                <template>entrepids/completeaddress/customer/address/edit.phtml</template>
            </action>
            <block type="page/html" name="entrepids_address_rfc_field" template="entrepids/completeaddress/rfc.phtml"/>
        </reference>
    </customer_address_form>
    <!-- customer account address -->
</layout>