<config>
    <tabs>
        <base translate="label" module="stockalert">
            <label>Entrepids</label>
            <sort_order>1</sort_order>
        </base>
    </tabs>
    <sections>
        <entrepids_stockalert translate="label" module="stockalert">
            <label>Product Stock Alert</label>
            <tab>base</tab>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
 
            <groups>
                <settings translate="label" module="stockalert">
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
 
                    <fields>
                         <enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </enabled>
                        
                        <emails translate="label">
                            <label>Emails that will receive notifications (separated by commas)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>required-entry</validate>
                        </emails>
                    </fields>
                </settings>
            </groups>
        </entrepids_stockalert>
    </sections>
</config>