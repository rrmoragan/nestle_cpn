<config>
    <modules>
        <Entrepids_MassImage>
            <version>0.0.1</version>
        </Entrepids_MassImage>
    </modules>

    <global>
        <helpers>
            <massimage>
                <class>Entrepids_MassImage_Helper</class>
            </massimage>
        </helpers>


        <models>
            <massimage>
                <class>Entrepids_MassImage_Model</class>
            </massimage>
        </models>

        <events>
            <admin_system_config_changed_section_entrepids_massimage>
                <observers>
                    <upload>
                        <type>singleton</type>
                        <class>massimage/observer</class>
                        <method>uploadImageBySku</method>
                    </upload>
                </observers>
            </admin_system_config_changed_section_entrepids_massimage>
        </events>
    </global>
</config>